<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.thyp.agendathyp1516.Activities.ActivityMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EDTsemaine"
        android:id="@+id/btnSemaine"
        android:layout_marginTop="118dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_alignLeft="@+id/btnJour"
        android:layout_alignStart="@+id/btnJour"
        android:layout_alignRight="@+id/btnJour"
        android:layout_alignEnd="@+id/btnJour" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGestionSalles"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnSemaine"
        android:layout_alignEnd="@+id/btnSemaine"
        android:layout_alignLeft="@+id/btnSemaine"
        android:layout_alignStart="@+id/btnSemaine"
        android:text="gestion de salles" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGestionEDT"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignLeft="@+id/btnGestionSalles"
        android:layout_alignStart="@+id/btnGestionSalles"
        android:layout_alignRight="@+id/btnGestionSalles"
        android:layout_alignEnd="@+id/btnGestionSalles"
        android:layout_below="@+id/btnGestionSalles"
        android:text="gestion de l&apos;emploi du temps" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EDTjour"
        android:id="@+id/btnJour"
        android:layout_alignBottom="@+id/btnSemaine"
        android:layout_marginBottom="43dp"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="@string/title_activity_edtday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Consultation de l&apos;agenda"
        android:id="@+id/textView5"
        android:layout_above="@+id/btnJour"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gestion de l&apos;agenda"
        android:id="@+id/textView4"
        android:layout_above="@+id/btnGestionSalles"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
