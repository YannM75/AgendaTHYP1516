<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:nestedScrollingEnabled="true">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNomExam"
        android:layout_above="@+id/textView17"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date :"
        android:id="@+id/textView17"
        android:textSize="20dp"
        android:layout_above="@+id/editTextDateExam"
        android:layout_alignLeft="@+id/editTextNomExam"
        android:layout_alignStart="@+id/editTextNomExam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/btnAjouterEx"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editTextHeureExam"
        android:layout_alignLeft="@+id/editTextHeureExam"
        android:layout_alignStart="@+id/editTextHeureExam"
        android:layout_alignRight="@+id/editTextHeureExam"
        android:layout_alignEnd="@+id/editTextHeureExam" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/button4"
        android:layout_below="@+id/btnAjouterEx"
        android:layout_alignLeft="@+id/btnAjouterEx"
        android:layout_alignStart="@+id/btnAjouterEx"
        android:layout_alignRight="@+id/btnAjouterEx"
        android:layout_alignEnd="@+id/btnAjouterEx" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextDateExam"
        android:layout_above="@+id/textView18"
        android:layout_alignRight="@+id/editTextNomExam"
        android:layout_alignEnd="@+id/editTextNomExam"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Heure :"
        android:id="@+id/textView18"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editTextDateExam"
        android:layout_alignStart="@+id/editTextDateExam" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editTextHeureExam"
        android:layout_below="@+id/textView18"
        android:layout_alignRight="@+id/editTextDateExam"
        android:layout_alignEnd="@+id/editTextDateExam"
        android:layout_alignLeft="@+id/editTextDateExam"
        android:layout_alignStart="@+id/editTextDateExam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom d&apos;examen :"
        android:id="@+id/textView16"
        android:layout_above="@+id/editTextNomExam"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AjtExam"
        android:id="@+id/textView15"
        android:textStyle="bold"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>